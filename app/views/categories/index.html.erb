<h1>Categories</h1>

<% @categories.each do |category| %>
  <div class="category">
    <h2><%= category.name %></h2>
    <img src="<%= category.icon %>" alt="<%= category.name %> Icon">
    <p>Total Amount: <%= number_to_currency(category.total_amount) %></p>
    <%= link_to "View Transactions", category_path(category) %>
  </div>
<% end %>

<%= link_to "Add a new category", new_category_path %>
