<%= stylesheet_link_tag 'mystyle' %>
<div class="log-in">
  <%= link_to root_path, class: "fas fa-arrow-left custom-arrow" do %>
  <% end %>
  <h2 class="regTitle">LOGIN</h2>
</div>


<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'login-container' }) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="acLogin">
    <%= f.submit "Log in", class: 'submit' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
