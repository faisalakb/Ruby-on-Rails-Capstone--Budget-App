<%= form_for [@category, @transaction] do |f| %>

  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :amount %>
    <%= f.number_field :amount %>
  </div>

  <div>
    <%= f.label :category_ids %>
    <%= f.collection_select(:category_ids, @categories, :id, :name) %>
  </div>

  <%= f.submit 'Save' %>
<% end %>