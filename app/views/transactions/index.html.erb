 <h4 class="tranTitle"><strong style="margin:auto">Transactions for:  <%= @category.name %> </strong> </h4>
 <h4 class="totAmount" style="color:skyblue"><strong>Total Amount :</strong> <%= number_to_currency(@total_amount) %></h4>

<br/>
<br/>

<div class="mt-5">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Amount</th>
        <th>Created At</th>
      </tr>
    </thead>
    <tbody>
      <% @transactions.each do |transaction| %>
        <tr>
          <td><%= transaction.name %></td>
          <td><%= number_to_currency(transaction.amount) %></td>
          <td><%= transaction.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br/>
<%= link_to "Add a new transaction", new_category_transaction_path(@category), class: "btn btn-primary custom_tranBtn" %>

